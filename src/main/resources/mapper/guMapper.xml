<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kbank.backend.mapper.GuMapper">

    <select id="findAll" resultType="com.kbank.backend.domain.address.gu.Gu">
        SELECT * from gu_tb
    </select>

    <select id="findById" resultType="com.kbank.backend.domain.address.gu.Gu">
        SELECT gu_pk, gu_si_fk, gu_nm from gu_tb where gu_pk = #{pk}
    </select>

    <select id="findByName" resultType="com.kbank.backend.domain.address.gu.Gu">
        SELECT gu_pk, gu_si_fk, gu_nm from gu_tb where gu_nm = #{name}
    </select>

    <insert id="save" parameterType="com.kbank.backend.domain.address.gu.Gu">
        INSERT INTO gu_tb (gu_si_fk, gu_nm) VALUES (#{si}, #{name})
    </insert>


</mapper>